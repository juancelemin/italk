<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appmyproyect.jcelemin.com.italk.SOSActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="sonido"
            android:id="@+id/btnConver"
            android:layout_weight="1"
            android:background="@drawable/converso"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="mensaje de texto"
            android:id="@+id/btnNecesi"
            android:layout_weight="1"
            android:background="@drawable/needs"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="saludos"
            android:id="@+id/btnSalu"
            android:layout_weight="1"
            android:background="@drawable/hola"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="cancelar"
            android:id="@+id/btnSeleccionarSalir"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_margin="5dp" />

    </LinearLayout>
</RelativeLayout>
