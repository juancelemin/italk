<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appmyproyect.jcelemin.com.italk.SaludoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_weight="1" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="hola"
                android:id="@+id/btnHi"
                android:layout_weight="1"
                android:background="@drawable/hola"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="buenas noches"
                android:id="@+id/btnGoodNight"
                android:layout_weight="1"
                android:background="@drawable/moon"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="hasta manana"
                android:id="@+id/btnTomorrow"
                android:layout_weight="1"
                android:background="@drawable/dias"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="regresar"
                android:id="@+id/btnBack"
                android:layout_weight="1"
                android:background="@drawable/plus"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="buenos dias"
                android:id="@+id/btnGoodMorning"
                android:layout_weight="1"
                android:background="@drawable/sol"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="hasta luego"
                android:id="@+id/btnBye"
                android:layout_weight="1"
                android:background="@drawable/noches"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="adicionar saludo"
                android:id="@+id/btnAddGreeds"
                android:layout_weight="1"
                android:background="@drawable/happy2"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="home"
                android:id="@+id/btnHome"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
