<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appmyproyect.jcelemin.com.italk.EditarNesecidadActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="te quiero mucho"
                android:id="@+id/btnnesc1"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/needsuno" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="no lo se"
                android:id="@+id/btnnesc2"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/needsdos" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="tengo una idea"
                android:id="@+id/btnnesc3"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/needstres" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="regresar"
                android:id="@+id/btnnesc4"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/needscuatro" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="estoy de acuerdo"
                android:id="@+id/btnnesc5"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/needscinco" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="que horas son"
                android:id="@+id/btnnesc6"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/needsseis" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="no me gusta esto"
                android:id="@+id/btnnesc7"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/needssiete" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="home"
                android:id="@+id/btnEnesBack"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/derecha" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
